{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/remix",
      "config": {
        "experimentalPPR": false
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],

  "framework": "remix",
  "regions": ["iad1"],
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": "public",
  "env": {
    "VERCEL_ENV": "production"
  }
}
